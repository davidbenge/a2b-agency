{
    "exclude": ["node_modules", "dist"],
    "compilerOptions": {
      "target": "ES6",
      "module": "ES6",
      "sourceMap": true,
      "jsx": "react-jsx",
      "allowJs": true,
      "checkJs": false,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "typeRoots": [
        "./node_modules/@types",
        "./src/utils",
        "./src/types"
      ]
    }
  }